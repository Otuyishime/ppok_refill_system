@model IEnumerable<PPOK_System.Domain.Template>

@{
    ViewBag.Title = "Index";
}

<h2>Templates List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Temp_Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.templateType.Temp_Type_Name)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.communicationType.comm_type_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Temp_Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.templateType.Temp_Type_Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.communicationType.comm_type_name)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
