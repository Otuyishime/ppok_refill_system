
@using (Html.BeginForm("EditPharmacist", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<br />
<div class="form-group">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Phone Call
            </div>
            <div class="panel-body">
                <textarea class="form-control" placeholder="Enter message ..." disabled></textarea>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Edit Template", "Pharmacists", "Admin", null, new { @class = "btn btn-default btn-sm" })
                <input type="submit" class="btn btn-default btn-sm pull-right" value="Save Template" />
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Text Message
            </div>
            <div class="panel-body">
                <textarea class="form-control" placeholder="Enter message ..." disabled></textarea>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Edit Template", "Pharmacists", "Admin", null, new { @class = "btn btn-default btn-sm" })
                <input type="submit" class="btn btn-default btn-sm pull-right" value="Save Template" />
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Email Message
            </div>
            <div class="panel-body">
                <textarea class="form-control" placeholder="Enter message ..." disabled></textarea>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Edit Template", "Pharmacists", "Admin", null, new { @class = "btn btn-default btn-sm" })
                <input type="submit" class="btn btn-default btn-sm pull-right" value="Save Template" />
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

